.continer
  = form_for(resource, as: resource_name, url: session_path(resource_name),  :html => {:class => 'form-signin'}) do |f|
    %h2.form-signin-heading Please sign in
    = f.label :email, :class => "sr-only"
    = f.email_field :email, autofocus: true, placeholder: "Email address", :class => "form-control", :id => "inputEmail"
    = f.label :password, :class => "sr-only"
    = f.password_field :password, autocomplete: "off", placeholder: "Password", :class => "form-control", :id => "inputPassword"
    - if devise_mapping.rememberable?
      .checkbox
        = f.check_box :remember_me
        = f.label :remember_me
    = f.submit "Sign in", :class => "btn btn-lg btn-primary btn-block"

  .text-center
    %p
      Not a member?
      = link_to "Sign up now", "/users/sign_up"












