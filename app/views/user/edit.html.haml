= form_for current_user, html: {class: "container user-new"} do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Edit Profile
        .user-name_image.row
          .user-name.col-md-10
            = f.text_field :username, placeholder: :Username
          .user-image.col-md-2
            %button.btn.btn-primary Change image
            = f.file_field :avatar
        = f.email_field :email, placeholder: "E-Mail"
        = f.password_field :password, placeholder: "Password"
      .col-md-12
        %h4 Member of
        .user-user-member.row
          .user-name.col-md-12
            = f.text_field :group, placeholder: "Member"
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_area :profile, cols: "30", rows: "4", placeholder: "Profile"
        %h4 Works
        .user-name_image.row
          .user-name.col-md-12
            = f.text_area :work, cols: "30", rows: "4", placeholder: "Works"
    .row.text-center.user-btn
      = f.submit "Save", :class => "btn btn-lg btn-primary btn-block"
