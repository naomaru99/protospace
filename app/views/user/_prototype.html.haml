.col-sm-4.col-md-3.proto-content
  - if user_signed_in? && current_user.id == prototype.user_id
    .dropdown.drop_menu_location
      %button.btn.btn-default.dropdown-toggle#dropdownMenu{ type: "button", data: { toggle: "dropdown" } }
        Action
      %ul.dropdown-menu{ aria: { labelledby: "dropdownMenu1" } }
        %li
          = link_to "Delete", prototype_path(prototype), method: :delete
        %li
          = link_to "Edit", edit_prototype_path(prototype)
  .thumbnail
    = link_to image_tag(prototype.thumbnails.main.first!.image), prototype_path(prototype.id)
    .caption
      %h3
        = prototype.title
      .proto-meta
        .proto-user
          = link_to "by #{prototype.user.username}", user_path(prototype.user.id)
        .proto-posted
          = prototype.created_at.strftime("%b %d")
      %ul.proto-tag-list.list-inline
        %li
          / %a{ :href => "#", :class => "btn btn-default" } iPad
          - if prototype.tag1
            .btn.btn-default
              = prototype.tag1
        %li
          / %a{ :href => "#", :class => "btn btn-default" } wireframe
          - if prototype.tag2
            .btn.btn-default
              = prototype.tag2
        %li
          / %a{ :href => "#", :class => "btn btn-default" } wireframe
          - if prototype.tag3
            .btn.btn-default
              = prototype.tag3
